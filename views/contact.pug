extends base.pug 


block scripts
    scripts(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    div#contact-page 
        h1.contact  Contact Us 
        form(action="/contact", method="post",Class="myform")   
            label(for="Name") Name : 
            input(type="text", class="myInput", name="Name", Id="Name",placeholder="Enter Your Name")
            
            label(for="email") Email : 
            input(type="email", class="myInput", name="email", Id="email",placeholder="Enter Your Email")

            label(for="Conatct") Conatct NO : 
            input(type="number", class="myInput", name="Conatct", Id="Conatct",placeholder="Enter Your Phone NO ")

            label(for="Address") Address/Locality : 
            input(type="text", class="myInput", name="Address", Id="Address",placeholder="Enter Your Address")

            button(class="btn")
                | Submit 


            